# ============================================
# EXPRESS BACKEND TEMPLATE
# ============================================

# Application
APP_NAME=Express Backend
APP_URL=http://localhost:3000
API_VERSION=v1

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# DATABASE
# ============================================
DB_CLIENT=pg
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# JWT
# ============================================
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-must-be-at-least-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# EMAIL (SMTP)
# ============================================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email
EMAIL_PASSWORD=your_password
EMAIL_FROM=noreply@example.com

# ============================================
# SECURITY
# ============================================
HASH_ALGORITHM=bcrypt
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ============================================
# UPLOADS
# ============================================
UPLOAD_STRATEGY=local
UPLOAD_LOCAL_PATH=uploads

# Cloudinary (if UPLOAD_STRATEGY=cloudinary)
# CLOUDINARY_CLOUD_NAME=xxx
# CLOUDINARY_API_KEY=xxx
# CLOUDINARY_API_SECRET=xxx

# ============================================
# OTHER
# ============================================
LOG_LEVEL=info
CORS_ORIGIN=*
