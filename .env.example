# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-must-be-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
# Password Hashing
HASH_ALGORITHM=bcrypt
# Options: bcrypt, scrypt, pbkdf2, argon2 (argon2 requires 'argon2' package)
BCRYPT_ROUNDS=12
HASH_KEY_LENGTH=64
HASH_SALT_LENGTH=16

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# Application
APP_NAME=Express Backend
API_VERSION=v1
